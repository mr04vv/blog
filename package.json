{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler pages dev",
    "deploy": "$npm_execpath run build && wrangler pages deploy",
    "fmt": "biome format --write ./app",
    "fmt:check": "biome format ./app",
    "lint:text": "textlint \"**/*.mdx\" -f pretty-error",
    "lint:text:fix": "textlint --fix \"**/*.mdx\"",
    "lint": "biome lint ./app",
    "lint:fix": "biome lint --apply ./app",
    "lint:fix:unsafe": "biome lint --apply-unsafe ./app",
    "typecheck": "tsc --noEmit",
    "create": "bun createEntry.ts"
  },
  "private": true,
  "dependencies": {
    "@biomejs/biome": "1.8.2",
    "@hono/vite-ssg": "0.1.0",
    "@mdx-js/rollup": "3.0.1",
    "@resvg/resvg-js": "2.6.2",
    "budoux": "0.6.2",
    "hono": "4.4.7",
    "honox": "0.1.23",
    "jsdom": "24.1.0",
    "rehype-highlight": "7.0.0",
    "rehype-pretty-code": "0.13.2",
    "rehype-stringify": "10.0.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.0",
    "remark-mdx-frontmatter": "4.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.0",
    "satori": "0.10.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20240620.0",
    "@hono/vite-cloudflare-pages": "0.4.1",
    "@hono/vite-dev-server": "0.12.2",
    "@textlint/textlint-plugin-markdown": "14.0.4",
    "@types/bun": "1.1.5",
    "@types/jsdom": "21.1.7",
    "@types/prompts": "2.4.9",
    "autoprefixer": "10.4.19",
    "postcss": "8.4.38",
    "prompts": "2.4.2",
    "tailwindcss": "3.4.4",
    "textlint": "14.0.4",
    "textlint-rule-ja-space-between-half-and-full-width": "2.4.2",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "vite": "5.3.1",
    "vite-plugin-static-copy": "1.0.5",
    "wrangler": "3.61.0"
  }
}
