{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler pages dev",
    "deploy": "$npm_execpath run build && wrangler pages deploy",
    "fmt": "biome format --write ./app",
    "fmt:check": "biome format ./app",
    "lint:text": "textlint \"**/*.mdx\" -f pretty-error",
    "lint:text:fix": "textlint --fix \"**/*.mdx\"",
    "lint": "biome lint ./app",
    "lint:fix": "biome lint --apply ./app",
    "lint:fix:unsafe": "biome lint --apply-unsafe ./app",
    "typecheck": "tsc --noEmit",
    "create": "bun createEntry.ts",
    "convert": "bun convertImages.ts"
  },
  "private": true,
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@hono/react-renderer": "0.3.0",
    "@hono/vite-ssg": "0.1.1",
    "@mdx-js/rollup": "3.1.0",
    "@resvg/resvg-js": "2.6.2",
    "budoux": "0.6.4",
    "framer-motion": "12.4.7",
    "hono": "4.7.2",
    "honox": "0.1.35",
    "jsdom": "26.0.0",
    "lodash": "4.17.21",
    "motion": "12.4.7",
    "rehype-highlight": "7.0.2",
    "rehype-pretty-code": "0.14.0",
    "rehype-stringify": "10.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "remark-mdx-frontmatter": "5.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.1",
    "satori": "0.12.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250224.0",
    "@hono/vite-cloudflare-pages": "0.4.2",
    "@hono/vite-dev-server": "0.18.2",
    "@textlint/textlint-plugin-markdown": "14.4.2",
    "@types/bun": "1.2.3",
    "@types/jsdom": "21.1.7",
    "@types/lodash": "4.17.15",
    "@types/prompts": "2.4.9",
    "autoprefixer": "10.4.20",
    "postcss": "8.5.3",
    "prompts": "2.4.2",
    "tailwindcss": "3.4.17",
    "textlint": "14.4.2",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-rule-ja-space-between-half-and-full-width": "2.4.2",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "12.0.2",
    "vite": "6.2.0",
    "vite-plugin-static-copy": "2.2.0",
    "wrangler": "3.109.3"
  }
}
