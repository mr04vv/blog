{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler pages dev",
    "deploy": "$npm_execpath run build && wrangler pages deploy",
    "fmt": "biome format --write ./app",
    "fmt:check": "biome format ./app",
    "lint:text": "textlint \"**/*.mdx\" -f pretty-error",
    "lint:text:fix": "textlint --fix \"**/*.mdx\"",
    "lint": "biome lint ./app",
    "lint:fix": "biome lint --apply ./app",
    "lint:fix:unsafe": "biome lint --apply-unsafe ./app",
    "typecheck": "tsc --noEmit",
    "create": "bun createEntry.ts",
    "convert": "bun convertImages.ts"
  },
  "private": true,
  "dependencies": {
    "@biomejs/biome": "1.9.3",
    "@hono/vite-ssg": "0.1.0",
    "@mdx-js/rollup": "3.0.1",
    "@resvg/resvg-js": "2.6.2",
    "budoux": "0.6.2",
    "hono": "4.6.3",
    "honox": "0.1.26",
    "jsdom": "25.0.1",
    "rehype-highlight": "7.0.0",
    "rehype-pretty-code": "0.14.0",
    "rehype-stringify": "10.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.0",
    "remark-mdx-frontmatter": "5.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.1",
    "satori": "0.11.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20241004.0",
    "@hono/vite-cloudflare-pages": "0.4.2",
    "@hono/vite-dev-server": "0.16.0",
    "@textlint/textlint-plugin-markdown": "14.2.1",
    "@types/bun": "1.1.11",
    "@types/jsdom": "21.1.7",
    "@types/prompts": "2.4.9",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.47",
    "prompts": "2.4.2",
    "tailwindcss": "3.4.13",
    "textlint": "14.2.1",
    "textlint-rule-ja-space-between-half-and-full-width": "2.4.2",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "vite": "5.4.8",
    "vite-plugin-static-copy": "1.0.6",
    "wrangler": "3.80.2"
  }
}
